<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.View"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name="com.slothproductions.riskybusiness.view.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.slothproductions.riskybusiness.view.MainMenuScreen"
            android:label="MainMenuScreen"
            android:theme="@style/SplashTheme"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name="com.slothproductions.riskybusiness.view.BoardScreen"
            android:label="@string/title_activity_board_screen"
            android:theme="@style/BoardTheme"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name="com.slothproductions.riskybusiness.view.GameSetupScreen"
            android:label="@string/title_game_setup_screen"
            android:screenOrientation="sensorLandscape">
        </activity>
    </application>

</manifest>
