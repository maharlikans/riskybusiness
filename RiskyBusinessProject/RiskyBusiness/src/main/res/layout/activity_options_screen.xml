<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
<TableRow android:gravity="center">
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/music_volume"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/options_text_size"
            android:layout_marginRight="5dp"
            android:text="@string/music_volume" />
        <SeekBar
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/music_volume_seekbar"
            android:layout_toRightOf="@+id/music_volume"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="30dp"
            android:progress="50"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/music_volume_value"
            android:layout_toRightOf="@+id/music_volume_seekbar"/>
</TableRow>
    <TableRow android:gravity="center">
        <TextView
            android:id="@+id/sound_effect_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/options_text_size"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/music_volume"

            android:text="@string/sound_effects_volume"/>
        <SeekBar
            android:id="@+id/sound_effect_seekbar"
            android:layout_width="250dp"
            android:layout_marginRight="30dp"
            android:progress="50"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sound_effect_volume"
            android:layout_below="@id/music_volume_seekbar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sound_effect_value"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/music_volume_seekbar"
            android:layout_below="@+id/music_volume_value"/>
</TableRow>
</TableLayout>